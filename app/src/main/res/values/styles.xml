<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="mainBtnStyle">
        <item name="android:layout_width">@dimen/largeButtonWidth</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margeVertical</item>
        <item name="android:background">@drawable/shape_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/largeText</item>
    </style>

    <style name="FormHintTextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="HintTextView">
        <item name="android:textSize">13sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="HintTextView.Value">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

</resources>